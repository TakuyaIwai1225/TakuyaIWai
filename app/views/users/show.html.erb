<div class="container">
  <% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          User Name: <%= @user.name %><br><br>
          User Email: <%= @user.email %>
        </h1>
      </section>
    </aside>
  </div>
</div>
